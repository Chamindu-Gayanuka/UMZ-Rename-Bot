    "keywords": ["Premium Rename Bot", "Renamer Bot 4GB", "Mongo DB"],    
    "repository": "https://github.com/Chamindu-Gayanuka/UMZ-Rename-Bot",
    
    "env": {
        "API_ID": {
            "description": "Your APP ID From my.telegram.org ",
            "value": "",
            "required": true
        },
        
        "API_HASH": {
            "description": "Your API Hash From my.telegram.org ",
            "value": "",
            "required": true
        },
        
        "BOT_TOKEN": {
            "description": "Your Bot Token From @BotFather",
            "value": "",
            "required": true
        },
        
        "ADMIN": {
            "description":"Add Your User ID, If Multiple Is Use Space To Split",
            "value": "",
            "required": true
        },
        
        "STRING_SESSION": {
            "description": "Premium 4GB Client Pyrogram v2 String Session, You Can Get It From @StringGenXRobot",
            "value": "",
            "required": false
        },
        
        "FORCE_SUB": {
            "description": "Your Force Subscribe Channel Username Without @",
            "value": "",
            "required": false 
        },
        
        "LOG_CHANNEL": {
            "description":"Bot Logs Channel To Sending User Data & 4GB Premium Client To Use, Id Must Startswith -100",
            "value": "",
            "required": true          
        },
        
        "DATABASE_URL": {
            "description": "Your Mongo DB URL Obtained From mongodb.com",
            "value": "",
            "required": true
        },
        
        "DATABASE_NAME":{ 
            "description":"Your Mongo DB Database Name",
            "value": "Cluster0",
            "required": false
        },
        
        "START_PIC": {
            "description": "Your Bot Start Command Pic, You Can Get It From @GenTelegraphBot",
            "value": "https://github.com/Chamindu-Gayanuka/UMZ-Rename-Bot",
            "required": false
        }
    },
    
    "buildpacks": [
        {
            "url": "heroku/python"
        },
        {
            "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest"
